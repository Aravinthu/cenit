= rails_admin_form_for @object, url: share_collection_path, html: { multipart: true, class: "form-horizontal denser"} do |form|
  = form.generate nested_in: true

  .form-actions
    %button.btn.btn-primary{type: 'submit', name: '_save', :'data-disable-with' => t('admin.actions.share_collection.submit')}
      %i{class: @action.try(:link_icon)}
      = t('admin.actions.share_collection.submit')
    %span.extra_buttons
      %button.btn{type: 'submit', name: '_continue', :'data-disable-with' => t('admin.form.cancel')}
        %i.icon-remove
        = t('admin.form.cancel')