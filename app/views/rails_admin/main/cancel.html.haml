%h4
  = t('admin.actions.cancel.you_are_requesting', model_name: @abstract_model.pretty_name.downcase)
  &ldquo;
  %strong>= @model_config.with(object: @object).object_label
  \&rdquo;
  %span>
= form_for(@object, url: cancel_path(model_name: @abstract_model.to_param, id: @object.id), html: {method: "delete"}) do
  %input{type: :hidden, name: 'return_to', value: (params[:return_to].presence || request.referer)}
  = render partial: 'confirmation_controls', locals: {confirmation_name: 'cancel'}
