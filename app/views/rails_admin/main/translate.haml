= rails_admin_form_for @object, url: url_for(action: @action.action_name, params: params.merge(bulk_ids: @bulk_ids)), html: { multipart: true, class: "form-horizontal denser"} do |form|
  = form.generate nested_in: true

  .form-actions
    %button.btn.btn-primary{type: 'submit', name: '_save'}
      %i{class: @action.try(:link_icon)}
      = wording_for(:menu, @action)
    %span.extra_buttons
      %button.btn{type: 'submit', name: '_continue'}
        %i.icon-remove
        = t('admin.form.cancel')
