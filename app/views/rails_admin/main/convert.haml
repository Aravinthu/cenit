= rails_admin_form_for @object, url: convert_path(params.merge(bulk_ids: @bulk_ids)), html: { multipart: true, class: "form-horizontal denser", data: { title: 'Convert'} } do |form|
  = form.generate nested_in: true

  .form-actions
    %button.btn.btn-primary{type: 'submit', name: '_save', :'data-disable-with' => t('admin.actions.convert.submit')}
      %i.icon-share
      = t('admin.actions.convert.submit')
    %span.extra_buttons
      %button.btn{type: 'submit', name: '_continue', :'data-disable-with' => t('admin.form.cancel')}
        %i.icon-remove
        = t('admin.form.cancel')
