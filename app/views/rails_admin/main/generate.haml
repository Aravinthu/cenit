= rails_admin_form_for @options, url: url_for(action: @action.action_name, params: params.merge(bulk_ids: @bulk_ids)), html: { multipart: true, class: "form-horizontal denser", data: { title: @page_name }} do |form|
  - if @new_data_types_count > 0
    %h3= t('admin.actions.generate.new_data_types', count: @new_data_types_count)
  = render partial: 'shutdown_and_reload'
  = form.generate nested_in: true

  .form-actions
    %button.btn.btn-primary{type: 'submit', name: '_generate', (@action.class.try(:disable_buttons?) ? :'data-disable-with' : nil) => wording_for(:menu, @action)}
      %i{class: @action.try(:link_icon)}
      = wording_for(:menu, @action)
    %span.extra_buttons
      %button.btn{type: 'submit', name: '_continue', (@action.class.try(:disable_buttons?) ? :'data-disable-with' : nil) => t('admin.form.cancel')}
        %i.icon-remove
        = t('admin.form.cancel')
