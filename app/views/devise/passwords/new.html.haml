.user-auth.panel.panel-default.text-center
  .panel-heading
    = link_to root_path do
      %span.cenit-logo
        =image_tag 'logo_cenitsaas_web.png'
      %span.cenit-hub{style: 'color: black;'}= 'Cenit IO'
    
  .panel-body
    .form-top
      = t('admin.forgotten.new_title')
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
      = devise_error_messages!
      .field.text-justify
        = f.label :email
        = f.email_field :email, autofocus: true, class: 'form-control'
      .actions
        %button.btn.btn-primary.pull-right{type:'submit'}
          = t('admin.forgotten.new_submit')
  .panel-footer.clearfix
    .pull-left
      = render "devise/shared/links"