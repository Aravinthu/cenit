{
    "title": "Product",
    "type": "object",

    "definitions": {
        "image": {
            "type": "object",
            "properties": {
                "url": {
                    "type": "string"
                },
                "position": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "type": {
                    "type": "string"
                },
                "dimensions": {
                    "type": "object",
                    "title": "Dimension",
                    "properties": {
                        "height": {
                            "type": "integer"
                        },
                        "width": {
                            "type": "integer"
                        }
                    }
                }
            },
            "required": ["url"]
        }
    },

    "properties": {
        "id": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "sku": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "price": {
            "type": "number",
            "minimum": 0,
            "exclusiveMinimum": true
        },
        "cost_price": {
            "type": "number"
        },
        "available_on": {
            "$ref": "Date"
        },
        "permalink": {
            "type": "string"
        },
        "meta_description": {
            "type": "string"
        },
        "meta_keywords": {
            "type": "string"
        },
        "shipping_category": {
            "type": "string"
        },
        "options": {
            "type": "array"
        },
        "taxons": {
            "type": "array"
        },
        "properties": {
            "type": "object"
        },
        "variants": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "sku": {
                        "type": "string",
                        "unique": true
                    },
                    "price": {
                        "type": "number"
                    },
                    "cost_price": {
                        "type": "number"
                    },
                    "quantity": {
                        "type": "integer"
                    },
                    "options": {
                        "type": "object"
                    },
                    "images": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/image"
                        }
                    }
                },
                "required": ["sku"]
            }
        },
        "images": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/image"
            }
        }
    },
    "required": ["id", "name", "price", "available_on", "shipping_category"]
}
